<!-- Modal -->
<div class="modal fade" id="edit-appointee-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">Modifica flusso partecipante</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12" id="edit_appointee_form">
            <%= render 'appointees/edit_appointee_form', invitation: @invitation, curr_status: nil %>
          </div>
        </div>
       </div>
    </div>
  </div>
</div>
