<div aria-live="polite" aria-atomic="true">
    <div class="toast" id="toast-notice" data-delay="5000" data-autohide="true">
        <div class="toast-header bg-success text-white">
            <i data-feather="alert-circle"></i>
            <strong class="mr-auto ml-2"><%= t(:info) %></strong>
            <small class="text-white-50 ml-2"><%= t('toast.just_now') %></small>
            <button class="ml-2 mb-1 close text-white" type="button" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="toast-body"></div>
    </div>

    <div class="toast" id="toast-alert" data-delay="5000" data-autohide="true">
        <div class="toast-header bg-warning text-white">
            <i data-feather="alert-triangle"></i>
            <strong class="mr-auto ml-2"><%= t(:warning) %></strong>
            <small class="text-white-50 ml-2"><%= t('toast.just_now') %></small>
            <button class="ml-2 mb-1 close text-white" type="button" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>
