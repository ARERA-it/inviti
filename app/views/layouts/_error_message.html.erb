<% if model.errors.any? %>
  <div class="card mb-4 py-3 border-bottom-danger border-left-danger" id="error_explanation">
    <div class="card-body">
      <h4><%= t('errors.messages.not_saved', count: model.errors.count) %></h4>
      <ul>
        <% model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
