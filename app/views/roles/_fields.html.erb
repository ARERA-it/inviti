<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= form.label :name, "Nome del ruolo" %>
      <%= form.text_field :name, class: "form-control", readonly: ro, autocomplete: 'off' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= form.label :description, "Descrizione" %>
      <%= form.text_area :description, class: "form-control", readonly: ro, autocomplete: 'off' %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">

    <div class="table-responsive">
      <table class="table table-bordered table-sm" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Description</th>
            <th>Permission</th>
          </tr>
        </thead>

        <tbody>
          <%= form.fields_for :permissions do |f| %>
            <tr>
              <td><%= f.object.description! %></td>
              <td><%= f.check_box :permitted %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
