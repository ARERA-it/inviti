<div class="row">
  <div class="col">
    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModal">
      Storico delle modifiche
    </button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Storico delle modifiche</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-sm table-striped" style="font-size: 0.85em;">
          <thead class="thead-light">
            <tr>
              <th>Utente</th>
              <th>Azione</th>
              <th>Attributi</th>
              <th>Data e ora</th>
            </tr>
          </thead>
          <tbody>
            <% @invitation.own_and_associated_audits.includes(:user).each do |a| %>
              <tr>
                <td><span data-toggle="tooltip" title="<%= a.user.try(:display_name) %>"><%= a.user.try(:username) %></span></td>
                <td><%= audit_model_action a %></td>
                <td><%= audit_changes a.auditable_type, a.audited_changes %></td>
                <td><%= l(a.created_at, format: :short) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
       </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>
