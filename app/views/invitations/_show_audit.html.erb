<div class="row">
  <div class="col">
    <%= link_to "Storico delle modifiche", audits_invitation_path(@invitation), class: "btn btn-link", remote: true %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="invitation-audit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Storico delle modifiche</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="audit-table-wrapper">
          <!-- filled by invitations/audits -->
        </div>
       </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
      </div>
    </div>
  </div>
</div>
