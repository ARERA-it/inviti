<div class="card mb-3">
  <div class="card-header">
    Incarico
  </div>
  <div class="card-body">
    <%= form_with(model: @invitation, class: 'appointee-choice') do |form| %>

      <div class="form-group">
        <%= form.label :decision, "Partecipazione" %>
        <%= form.collection_select :decision, Invitation.decisions, :first, ->(e){ t("decision.#{e.first}") }, { }, class: "form-control"  %>
      </div>

      <div class="">

      </div>

      <div class="row who-participates">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :appointee_id, "Partecipante" %>
            <%= form.collection_select :appointee_id, User.appointeeable, :id, :display_name, { prompt: "Seleziona...", include_blank: "Altro" }, class: "form-control"  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :alt_appointee_name, "Partecipante (altro)" %>
            <%= form.text_field :alt_appointee_name, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :delegation_notes, "Osservazioni" %>
        <%= form.text_area :delegation_notes, rows: 4, class: "form-control" %>
      </div>

      <%= form.submit "Salva", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
