<li class="chat-comment">
  <div class="row">
    <% if current_user==comment.user %>

      <div class="col-md-auto">
        <%= avatars comment.user %>
      </div>
      <div class="col">
        <div class="row mb-2">
          <div class="col">
            <strong><%= comment.user.display_name %></strong>
          </div>
          <div class="col">
            <small class="float-right"><%= livestamp comment.updated_at %></small>
          </div>
        </div>
        <div class="body">
          <%= comment.content %>
        </div>
      </div>


    <% else %>
      <div class="col">
        <div class="row mb-2">
          <div class="col">
            <small><%= livestamp comment.updated_at %></small>
          </div>
          <div class="col">
            <strong class="float-right"><%= comment.user.display_name %></strong>
          </div>
        </div>
        <div class="body text-right">
          <%= comment.content %>
        </div>
      </div>
      <div class="col-md-auto avatar">
        <%= avatars comment.user %>
      </div>
    <% end %>
  </div>
</li>
