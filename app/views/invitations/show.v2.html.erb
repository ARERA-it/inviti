<div class="row">
  <%= link_to :back, class: "btn btn-link" do %>
    <%= content_tag(:i, "", class: "fas fa-list fa-fw") + " Indietro" %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="row section email">
    <h3>Info generali</h3>

      <%= form_with(model: @invitation) do |form| %>
        <% if @invitation.errors.any? %>
          <div id="error_explanation">
            <h2><%= t('errors.messages.not_saved', count: @invitation.errors.count) %></h2>
            <ul>
            <% @invitation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :title, "Titolo" %>
          <%= form.text_field :title, class: "form-control", placeholder: "" %>
        </div>

        <div class="row">
          <div class="col-md-7">
            <div class="form-group">
              <%= form.label :location, "Luogo" %>
              <%= form.text_field :location, class: "form-control", placeholder: "" %>
            </div>
          </div>

          <div class="col-md-5">
            <div class="form-group">
              <%= form.label :date_and_time, "Data" %>
              <div class='input-group date' id='invitation-date'>
                <%= form.text_field :date_and_time, class: "form-control", placeholder: "" %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :organizer, "Organizzazione" %>
          <%= form.text_field :organizer, class: "form-control", placeholder: "" %>
        </div>


        <div class="actions">
          <%= form.submit "Salva", class: "btn btn-primary" %>
          <%= link_to 'Annulla', :back, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>



  <div class="col-md-7">

    <div class="row section email">
      <h3>Email</h3>
      <div class="email">
        <dl class="dl-horizontal">
          <dt>data</dt><dd><%= formatta_dataora @invitation.email_received_date_time %></dd>
          <dt>mittente</dt><dd><%= @invitation.email_from_name %> (<%= @invitation.email_from_address %>)</dd>
          <dt>oggetto</dt><dd><strong><%= @invitation.email_subject %></strong></dd>
          <dt>allegati</dt>
          <dd>
            <ul>
              <% @invitation.files.each do |f| %>
                <li>

                  <%= link_to url_for(f),  target: "_blank" do %>
                    <i class="fas fa-file-pdf fa-fw"></i>
                    <%= f.filename %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </dd>
          <dt>corpo</dt><dd><%= sanitize @invitation.email_body %></dd>
        </dl>
      </div>
    </div>


  </div>
</div>
