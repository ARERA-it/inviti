<div class="row">
  <h1>Elenco degli inviti</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Titolo</th>
        <th>Location</th>
        <th>Datetime</th>
        <th>Organizer</th>
        <th>Email subject</th>
        <th>Email body</th>
        <th>Email received date time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @invitations.each do |invitation| %>
        <tr>
          <td><%= invitation.title %></td>
          <td><%= invitation.location %></td>
          <td><%= invitation.datetime %></td>
          <td><%= invitation.organizer %></td>
          <td><%= invitation.email_subject %></td>
          <td><%= invitation.email_body_preview %></td>
          <td><%= invitation.email_received_date_time %></td>
          <td><%= link_to 'Show', invitation %></td>
          <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
          <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if @token %>
    <%= link_to 'Verifica arrivo nuove email', check_emails_invitations_path %>
  <% end %>
  
</div>
