<div class="card mb-3">
  <div class="card-header">
    Informazioni generali
  </div>
  <div class="card-body">
    <%= form_with(model: @invitation, html: { autocomplete: :off }) do |form| %>
      <% if @invitation.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('errors.messages.not_saved', count: @invitation.errors.count) %></h2>
          <ul>
            <% @invitation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, "Titolo" %>
        <%= form.text_field :title, class: "form-control", placeholder: "" %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :location, "Luogo" %>
            <%= form.text_field :location, class: "form-control", placeholder: "" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :organizer, "Organizzazione" %>
            <%= form.text_field :organizer, class: "form-control", placeholder: "" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :from_date_and_time_view, "Data e ora inizio" %>
            <div class='input-group date' id='invitation-from-date-time' data-target-input="nearest">
              <%= form.text_field :from_date_and_time_view, class: "form-control datetimepicker-input" %>
              <div class="input-group-append" data-target="#invitation-from-date-time" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :to_date_and_time_view, "Data e ora fine (opz.)" %>
            <div class='input-group date' id='invitation-to-date-time' data-target-input="nearest">
              <%= form.text_field :to_date_and_time_view, class: "form-control datetimepicker-input" %>
              <div class="input-group-append" data-target="#invitation-to-date-time" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="form-group">
        <%= form.label :notes, "Note" %>
        <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "" %>
      </div>

      <div class="actions">
        <%= form.submit "Salva", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
